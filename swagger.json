{
  "swagger": "2.0",
  "info": {
    "title": "DoggoReminder API",
    "description": "API que disponibiliza rotas de consulta, criação e edição de usuários, cachorros e rotinas, consumida pela aplicação DoggoReminderUI .",
    "version": "1.0"
  },
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user/add": {
      "post": { // Change from "get" to "post" method
        "summary": "Cria um novo usuário na base de dados",
        "produces": [
          "application/json"
        ],
        "parameters": [ // Define parameters here
          {
            "name": "name",
            "in": "formData",
            "description": "O nome do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "email",
            "in": "formData",
            "description": "O e-mail do usuário",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "formData",
            "description": "A senha do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
