{
  "swagger": "2.0",
  "info": {
    "title": "DoggoReminder API",
    "description": "API que disponibiliza rotas de consulta, criação e edição de usuários, cães e rotinas de alimentação, consumida pela aplicação DoggoReminderUI .",
    "version": "1.0"
  },
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user/add": {
      "post": {
        "summary": "Cria um novo usuário na base de dados",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User object containing name, email, and password",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "O nome do usuário"
                },
                "email": {
                  "type": "string",
                  "description": "O e-mail do usuário"
                },
                "password": {
                  "type": "string",
                  "description": "A senha do usuário"
                }
              },
              "required": [ "name", "email", "password" ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created - Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Valida e realiza login do usuário cadastrado",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "E-mail e senha do usuário cadastrado",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "description": "O e-mail do usuário"
                },
                "password": {
                  "type": "string",
                  "description": "A senha do usuário"
                }
              },
              "required": [ "email", "password" ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response - Usuário autenticado com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/user/list": {
      "get": {
        "summary": "Lista todos os usuários da base de dados",
        "produces": [
          "application/json"
        ],
        "parameters": [
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/dog/add": {
      "post": {
        "summary": "Cria um novo cão na base de dados",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "dog",
            "in": "body",
            "description": "Informações a respeito do animal como cor, idade, raça, gênero, nome, etc.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "O nome do animal"
                },
                "color": {
                  "type": "string",
                  "description": "A cor do animal"
                },
                "age": {
                  "type": "integer",
                  "description": "A idade do animal"
                },
                "race": {
                  "type": "string",
                  "description": "A raça do animal"
                },
                "gender": {
                  "type": "string",
                  "description": "O gênero do animal [M] ou [F]"
                },
                "user_id": {
                  "type": "string",
                  "description": "O Id do usuário autenticado (dono do animal)"
                }
              },
              "required": [ "name", "color", "age", "race", "gender", "user_id" ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created - Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/dog/list": {
      "get": {
        "summary": "Lista todos os cães do usuário",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "description": "Id (chave primária) do usuário autenticado.",
            "required": true,
            "schema": {
              "type": "string",
              "description": "O Id do usuário"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/dog/delete": {
      "post": {
        "summary": "Remove um cão da base de dados",
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "dog_id",
            "in": "body",
            "description": "O ID do cão a ser removido",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "dog_id": {
                  "type": "string",
                  "description": "O ID do cão"
                }
              },
              "required": [ "dog_id" ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response - O cão foi removido com sucesso.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad request response - Alguns parâmetros não foram preenchidos corretamente!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }

  }
}
